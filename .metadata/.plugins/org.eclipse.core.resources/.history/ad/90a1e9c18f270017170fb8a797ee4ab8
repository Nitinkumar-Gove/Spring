package com.reservationsystem.api.flight;

import java.util.ArrayList;
import java.util.Date;
import java.util.List;

import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class FlightController {
	
	@RequestMapping("/flights")
	public List<Flight> getAllFlights(){
		
	ArrayList<Flight> allTopics = new ArrayList<Flight>();
	Date deptarture = new Date();
	Date arrival = new Date();
	allTopics.add(new Flight("1",2000,"Pune","Mumbai",deptarture,arrival,50,"Daily flight"));
	allTopics.add(new Flight("1",2000,"Pune","Bangalore",deptarture,arrival,50,"Daily flight"));
	allTopics.add(new Flight("1",2000,"Pune","Goa",deptarture,arrival,50,"Daily flight"));
	return null;
	}
	
	
}
